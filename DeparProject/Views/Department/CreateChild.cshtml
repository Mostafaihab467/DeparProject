@model Department
@{
    ViewBag.Title = "Create Child Department";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Create Child Department</h2>

        @using (Html.BeginForm("CreateChild", "Department", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Logo, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Logo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Logo, "", new { @class = "text-danger" })
            </div>

            <!-- Hidden field for ParentDepartmentId -->
            @Html.HiddenFor(m => m.ParentDepartmentId)

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Back to Details", "Details", new { id = Model.ParentDepartmentId }, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>

   
</body>
</html>
